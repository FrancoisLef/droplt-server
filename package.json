{
  "name": "droplt-server",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/**.ts --fix",
    "prepare": "husky install",
    "prestart": "run-s generate",
    "start": "ts-node-dev --respawn --clear --transpile-only --rs src/index.ts",
    "test": "jest -i --watch",
    "seed": "NODE_ENV=development prisma db seed",
    "generate": "gen-env-types .env -o src/env.d.ts && prisma generate",
    "migrate": "prisma migrate dev"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "jest",
      "simple-import-sort"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error"
    }
  },
  "dependencies": {
    "@prisma/client": "^3.7.0",
    "apollo-server-express": "^3.6.1",
    "bcrypt": "^5.0.1",
    "chance": "^1.1.8",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.28.0",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.2",
    "express-jwt": "^6.1.0",
    "express-validator": "^6.14.0",
    "graphql": "^15.3.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.14.1",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chance": "^1.1.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-jwt": "^6.0.4",
    "@types/graphql-fields": "^1.3.4",
    "@types/http-errors": "^1.8.1",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^17.0.8",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "gen-env-types": "^1.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-mock-extended": "^2.0.4",
    "lint-staged": "^12.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prisma": "^3.7.0",
    "sort-package-json": "^1.53.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typegraphql-prisma": "^0.18.3",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": "16"
  },
  "packageManager": "yarn@3.1.1",
  "prisma": {
    "seed": "ts-node-dev prisma/seed.ts"
  }
}
