{
  "name": "@droplt/server",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "tsc --project tsconfig.server.json",
    "build:worker": "tsc --project tsconfig.worker.json",
    "lint": "eslint src/**/**.ts --fix",
    "prepare": "husky install",
    "prestart": "run-s generate",
    "start": "ts-node-dev --respawn --clear --transpile-only --rs --project tsconfig.server.json src/server/index.ts",
    "worker": "ts-node-dev --respawn --clear --transpile-only --rs --project tsconfig.worker.json src/worker/index.ts",
    "seed": "NODE_ENV=development prisma db seed",
    "generate": "run-s generate:worker generate:server generate:prisma",
    "generate:prisma": "prisma generate",
    "generate:server": "gen-env-types .env -o src/server/env.d.ts",
    "generate:worker": "gen-env-types .env -o src/worker/env.d.ts",
    "migrate": "NODE_ENV=development prisma migrate dev"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "jest",
      "simple-import-sort"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error"
    }
  },
  "dependencies": {
    "@ctrl/shared-torrent": "^4.0.0",
    "@ctrl/transmission": "^3.0.0",
    "@prisma/client": "^3.9.2",
    "apollo-server-core": "^3.6.3",
    "apollo-server-express": "^3.6.3",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.2",
    "date-fns": "^2.28.0",
    "deep-equal": "^2.0.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.2",
    "firebase-admin": "^10.0.2",
    "graphql": "^15.8.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.14.1",
    "graphql-subscriptions": "^2.0.0",
    "helmet": "^5.0.2",
    "prisma": "~3.9.2",
    "ramda": "^0.28.0",
    "reflect-metadata": "^0.1.13",
    "subscriptions-transport-ws": "^0.11.0",
    "toad-scheduler": "^1.6.0",
    "type-graphql": "^1.1.1",
    "typegraphql-prisma": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/deep-equal": "^1.0.1",
    "@types/dotenv-flow": "^3.2.0",
    "@types/express": "^4.17.13",
    "@types/graphql-fields": "^1.3.4",
    "@types/node": "^17.0.18",
    "@types/ramda": "^0.27.64",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "gen-env-types": "^1.3.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "sort-package-json": "^1.54.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": "16"
  },
  "packageManager": "yarn@3.1.1"
}
