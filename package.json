{
  "name": "droplt-server",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/**.ts --fix",
    "prepare": "husky install",
    "prestart": "run-s generate",
    "start": "ts-node-dev --respawn --clear --transpile-only --rs src/index.ts",
    "test": "jest",
    "seed": "prisma db seed",
    "generate": "cpy .env.example .env.local --rename --no-overwrite && gen-env-types .env.example -o src/env.d.ts && prisma generate",
    "migrate": "prisma migrate dev"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "jest",
      "simple-import-sort"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error"
    }
  },
  "dependencies": {
    "@prisma/client": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.1",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "graphql": "^16.0.1",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.13.6",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/graphql-fields": "^1.3.4",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "gen-env-types": "^1.3.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-mock-extended": "^2.0.4",
    "lint-staged": "^12.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prisma": "^3.5.0",
    "sort-package-json": "^1.53.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "typegraphql-prisma": "^0.18.0",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": "16"
  },
  "prisma": {
    "seed": "ts-node --project src/server/tsconfig.json prisma/seed.ts"
  }
}
