{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "lib": ["esnext"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"]
    },
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
